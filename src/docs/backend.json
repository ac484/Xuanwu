{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents the public and private profile of a user.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "User ID, same as Firebase Auth UID." },
        "bio": { "type": "string", "description": "A short biography of the user." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "achievements": { "type": "array", "items": { "type": "string" } },
        "expertiseBadges": {
          "type": "array",
          "items": { "$ref": "#/entities/ExpertiseBadge" }
        }
      }
    },
    "ExpertiseBadge": {
      "title": "Expertise Badge",
      "description": "Represents an area of expertise for a user.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      }
    },
    "Organization": {
      "title": "Organization",
      "description": "Represents a collaborative dimension for a group of users.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "ownerId": { "type": "string" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "memberIds": { "type": "array", "items": { "type": "string" } },
        "members": { "type": "array", "items": { "$ref": "#/entities/MemberReference" } },
        "teams": { "type": "array", "items": { "$ref": "#/entities/Team" } },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "MemberReference": {
      "title": "Member Reference",
      "description": "A reference to a user within an organization.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "presence": { "type": "string", "enum": ["active", "away", "offline"] },
        "isExternal": { "type": "boolean" },
        "expiryDate": { "type": "string", "format": "date-time" }
      }
    },
    "Team": {
      "title": "Team",
      "description": "A group of members within an organization.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "type": { "type": "string", "enum": ["internal", "external"] },
        "memberIds": { "type": "array", "items": { "type": "string" } }
      }
    },
    "Workspace": {
      "title": "Workspace",
      "description": "A logical space within a dimension for specific projects or functions.",
      "type": "object",
      "properties": {
        "dimensionId": { "type": "string" },
        "name": { "type": "string" },
        "lifecycleState": { "type": "string", "enum": ["preparatory", "active", "stopped"] },
        "visibility": { "type": "string", "enum": ["visible", "hidden"] },
        "scope": { "type": "array", "items": { "type": "string" } },
        "protocol": { "type": "string" },
        "capabilities": { "type": "array", "items": { "$ref": "#/entities/Capability" } },
        "grants": { "type": "array", "items": { "$ref": "#/entities/WorkspaceGrant" } },
        "teamIds": { "type": "array", "items": { "type": "string" } },
        "address": { "$ref": "#/entities/Address" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "WorkspaceGrant": {
      "title": "Workspace Grant",
      "description": "A direct grant of permissions for a user within a workspace.",
      "type": "object",
      "properties": {
        "grantId": { "type": "string" },
        "userId": { "type": "string" },
        "role": { "type": "string", "enum": ["Manager", "Contributor", "Viewer"] },
        "protocol": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "revoked", "expired"] },
        "grantedAt": { "type": "string", "format": "date-time" },
        "revokedAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" }
      }
    },
    "Capability": {
      "title": "Capability",
      "description": "A modular feature or function that can be mounted to a workspace.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["ui", "api", "data", "governance", "monitoring"] },
        "status": { "type": "string", "enum": ["stable", "beta"] },
        "description": { "type": "string" }
      }
    },
    "Address": {
      "title": "Address",
      "description": "A physical address.",
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "postalCode": { "type": "string" },
        "country": { "type": "string" },
        "details": { "type": "string" }
      }
    },
    "Location": {
        "title": "Location",
        "description": "A specific location within a physical address.",
        "type": "object",
        "properties": {
            "building": { "type": "string" },
            "floor": { "type": "string" },
            "room": { "type": "string" },
            "description": { "type": "string" }
        }
    },
    "WorkspaceTask": {
      "title": "Workspace Task",
      "description": "A single task item within a workspace.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "progressState": { "type": "string", "enum": ["todo", "doing", "completed", "verified", "accepted"] },
        "priority": { "type": "string", "enum": ["low", "medium", "high"] },
        "type": { "type": "string" },
        "quantity": { "type": "number" },
        "completedQuantity": { "type": "number" },
        "unitPrice": { "type": "number" },
        "discount": { "type": "number" },
        "subtotal": { "type": "number" },
        "parentId": { "type": "string" },
        "assigneeId": { "type": "string" },
        "dueDate": { "type": "string", "format": "date-time" },
        "photoURLs": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "location": { "$ref": "#/entities/Location" }
      }
    },
    "WorkspaceIssue": {
      "title": "Workspace Issue",
      "description": "A governance issue for handling conflicts.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["technical", "financial"] },
        "priority": { "type": "string", "enum": ["high", "medium"] },
        "issueState": { "type": "string", "enum": ["open", "closed"] },
        "comments": { "type": "array", "items": { "$ref": "#/entities/IssueComment" } }
      }
    },
     "IssueComment": {
      "title": "Issue Comment",
      "description": "A comment on a workspace issue.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "author": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "WorkspaceFile": {
      "title": "Workspace File",
      "description": "A versioned file within a workspace.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "currentVersionId": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "versions": { "type": "array", "items": { "$ref": "#/entities/WorkspaceFileVersion" } }
      }
    },
    "WorkspaceFileVersion": {
      "title": "Workspace File Version",
      "description": "A specific version of a workspace file.",
      "type": "object",
      "properties": {
        "versionId": { "type": "string" },
        "versionNumber": { "type": "number" },
        "versionName": { "type": "string" },
        "size": { "type": "number" },
        "uploadedBy": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "downloadURL": { "type": "string", "format": "uri" }
      }
    },
    "ScheduleItem": {
      "title": "Schedule Item",
      "description": "An event or milestone on the schedule.",
      "type": "object",
      "properties": {
        "accountId": { "type": "string" },
        "workspaceId": { "type": "string" },
        "workspaceName": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "startDate": { "type": "string", "format": "date-time" },
        "endDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["PROPOSAL", "OFFICIAL", "REJECTED"] },
        "originType": { "type": "string", "enum": ["MANUAL", "TASK_AUTOMATION"] },
        "originTaskId": { "type": "string" },
        "assigneeIds": { "type": "array", "items": { "type": "string" } },
        "location": { "$ref": "#/entities/Location" }
      }
    },
    "DailyLog": {
      "title": "Daily Log",
      "description": "A daily activity log entry.",
      "type": "object",
      "properties": {
        "accountId": { "type": "string" },
        "workspaceId": { "type": "string" },
        "workspaceName": { "type": "string" },
        "author": { "type": "object", "properties": {"uid": {"type": "string"}, "name": {"type": "string"}, "avatarUrl": {"type": "string", "format": "uri"}} },
        "content": { "type": "string" },
        "photoURLs": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "likes": { "type": "array", "items": { "type": "string" } },
        "likeCount": { "type": "number" },
        "commentCount": { "type": "number" }
      }
    },
    "DailyLogComment": {
        "title": "Daily Log Comment",
        "description": "A comment on a daily log.",
        "type": "object",
        "properties": {
            "author": { "type": "object", "properties": {"uid": {"type": "string"}, "name": {"type": "string"}, "avatarUrl": {"type": "string", "format": "uri"}} },
            "content": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        }
    },
    "AuditLog": {
      "title": "Audit Log",
      "description": "An entry in the audit trail.",
      "type": "object",
      "properties": {
        "orgId": { "type": "string" },
        "workspaceId": { "type": "string" },
        "recordedAt": { "type": "string", "format": "date-time" },
        "actor": { "type": "string" },
        "actorId": { "type": "string" },
        "action": { "type": "string" },
        "target": { "type": "string" },
        "type": { "type": "string", "enum": ["create", "update", "delete", "security"] }
      }
    },
    "PartnerInvite": {
      "title": "Partner Invite",
      "description": "An invitation for an external partner to join a team.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "teamId": { "type": "string" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "inviteState": { "type": "string", "enum": ["pending", "accepted", "expired"] },
        "invitedAt": { "type": "string", "format": "date-time" },
        "protocol": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores individual user profile data."
    },
    "/organizations/{orgId}": {
      "schema": { "$ref": "#/entities/Organization" },
      "description": "Stores organization data."
    },
    "/organizations/{orgId}/dailyLogs/{logId}": {
      "schema": { "$ref": "#/entities/DailyLog" },
      "description": "Sub-collection for daily activity logs within an organization."
    },
    "/organizations/{orgId}/dailyLogs/{logId}/comments/{commentId}": {
      "schema": { "$ref": "#/entities/DailyLogComment" },
      "description": "Comments on a daily log entry."
    },
    "/organizations/{orgId}/schedule_items/{itemId}": {
      "schema": { "$ref": "#/entities/ScheduleItem" },
      "description": "Sub-collection for schedule items within an organization."
    },
    "/organizations/{orgId}/invites/{inviteId}": {
      "schema": { "$ref": "#/entities/PartnerInvite" },
      "description": "Sub-collection for partner invitations."
    },
    "/organizations/{orgId}/auditLogs/{logId}": {
      "schema": { "$ref": "#/entities/AuditLog" },
      "description": "Sub-collection for audit logs within an organization."
    },
    "/workspaces/{workspaceId}": {
      "schema": { "$ref": "#/entities/Workspace" },
      "description": "Stores workspace data."
    },
    "/workspaces/{workspaceId}/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/WorkspaceTask" },
      "description": "Sub-collection for tasks within a workspace."
    },
    "/workspaces/{workspaceId}/issues/{issueId}": {
      "schema": { "$ref": "#/entities/WorkspaceIssue" },
      "description": "Sub-collection for issues within a workspace."
    },
    "/workspaces/{workspaceId}/issues/{issueId}/comments/{commentId}": {
      "schema": { "$ref": "#/entities/IssueComment" },
      "description": "Comments on a workspace issue."
    },
    "/workspaces/{workspaceId}/files/{fileId}": {
      "schema": { "$ref": "#/entities/WorkspaceFile" },
      "description": "Sub-collection for files within a workspace."
    }
  }
}
