
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents an authenticated user in the system.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["id", "name", "email"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores additional public and private information for a user.",
      "type": "object",
      "properties": {
        "bio": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "achievements": { "type": "array", "items": { "type": "string" } },
        "expertiseBadges": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" }
            }
          } 
        }
      }
    },
    "Organization": {
      "title": "Organization",
      "description": "A dimension entity that groups workspaces and members.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "ownerId": { "type": "string" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "members": { "type": "array", "items": { "$ref": "#/entities/MemberReference" } },
        "memberIds": { "type": "array", "items": { "type": "string" } },
        "teams": { "type": "array", "items": { "$ref": "#/entities/Team" } },
        "createdAt": { "type": "object", "description": "Firestore Timestamp" },
        "theme": { "type": "object" }
      },
      "required": ["name", "ownerId", "members", "memberIds"]
    },
    "Workspace": {
      "title": "Workspace",
      "description": "A logical workspace node within an organization or for a user.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "dimensionId": { "type": "string", "description": "Owner UserID or OrganizationID" },
        "visibility": { "type": "string", "enum": ["visible", "hidden"] },
        "lifecycleState": { "type": "string", "enum": ["preparatory", "active", "stopped"]},
        "protocol": { "type": "string" },
        "scope": { "type": "array", "items": { "type": "string" } },
        "capabilities": { "type": "array", "items": { "type": "object" } },
        "grants": { "type": "array", "items": { "$ref": "#/entities/WorkspaceGrant" } },
        "teamIds": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "object", "description": "Firestore Timestamp" }
      },
      "required": ["name", "dimensionId", "lifecycleState", "visibility"]
    },
    "PartnerInvite": {
      "title": "Partner Invite",
      "description": "An invitation sent to an external email to join the dimension.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "teamId": { "type": "string" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "inviteState": { "type": "string", "enum": ["pending", "accepted", "expired"] },
        "invitedAt": { "type": "object", "description": "Firestore Timestamp" },
        "protocol": { "type": "string" }
      },
      "required": ["email", "teamId", "inviteState"]
    },
    "MemberReference": {
      "title": "Member Reference",
      "description": "A reference to a member within an organization, including their role.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "presence": { "type": "string", "enum": ["active", "away", "offline"] }
      }
    },
    "Team": {
      "title": "Team",
      "description": "A logical grouping of members within an organization.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "type": { "type": "string", "enum": ["internal", "external"] },
        "memberIds": { "type": "array", "items": { "type": "string" } }
      }
    },
     "WorkspaceGrant": {
      "title": "Workspace Grant",
      "description": "Defines an individual user's specific role-based access to a workspace.",
      "type": "object",
      "properties": {
        "grantId": { "type": "string" },
        "userId": { "type": "string" },
        "role": { "type": "string", "enum": ["Manager", "Contributor", "Viewer"] },
        "status": { "type": "string", "enum": ["active", "revoked", "expired"] },
        "grantedAt": { "type": "object", "description": "Firestore Timestamp" }
      }
    },
    "DailyLog": {
        "title": "Daily Log",
        "description": "A record of daily activity within a workspace.",
        "type": "object",
        "properties": {
            "accountId": { "type": "string" },
            "workspaceId": { "type": "string" },
            "content": { "type": "string" },
            "photoURLs": { "type": "array", "items": { "type": "string", "format": "uri" } },
            "recordedAt": { "type": "object", "description": "Firestore Timestamp" }
        }
    },
    "AuditLog": {
        "title": "Audit Log",
        "description": "An immutable record of significant events in the system.",
        "type": "object",
        "properties": {
            "orgId": { "type": "string" },
            "workspaceId": { "type": "string" },
            "actor": { "type": "string" },
            "action": { "type": "string" },
            "target": { "type": "string" },
            "type": { "type": "string", "enum": ["create", "update", "delete", "security"] },
            "recordedAt": { "type": "object", "description": "Firestore Timestamp" }
        }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "#/entities/UserProfile",
      "description": "Stores public user profile data."
    },
    "/organizations/{orgId}": {
      "schema": "#/entities/Organization",
      "description": "Top-level dimension definitions."
    },
    "/organizations/{orgId}/invites/{inviteId}": {
      "schema": "#/entities/PartnerInvite",
      "description": "Pending invitations for external partners."
    },
    "/organizations/{orgId}/dailyLogs/{logId}": {
      "schema": "#/entities/DailyLog",
      "description": "Aggregated daily activity logs for the organization."
    },
    "/organizations/{orgId}/auditLogs/{logId}": {
      "schema": "#/entities/AuditLog",
      "description": "Aggregated audit trail for the organization."
    },
    "/workspaces/{workspaceId}": {
      "schema": "#/entities/Workspace",
      "description": "Logical workspace definitions, owned by a user or organization."
    },
    "/workspaces/{workspaceId}/tasks/{taskId}" : {
        "description": "Tasks within a specific workspace."
    },
    "/workspaces/{workspaceId}/issues/{issueId}" : {
        "description": "Issues within a specific workspace."
    },
    "/workspaces/{workspaceId}/files/{fileId}" : {
        "description": "Files within a specific workspace."
    }
  }
}
